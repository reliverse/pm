{
  "name": "@reliverse/pm",
  "version": "0.2.0",
  "description": "A library that detects the installed package managers, identifies the correct package manager, and provides various useful utilities for developers and users. ",
  "scripts": {
    "appts": "bun typecheck && bun lint && bun format",
    "build": "unbuild && bun build.paths.ts",
    "pub": "bun run build && bun publish",
    "format": "biome check --write .",
    "lint": "eslint --cache --fix .",
    "dev": "bun vitest",
    "knip": "knip"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reliverse/pm.git"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "module": "./dist/main.js",
  "exports": {
    "import": "./dist/main.js",
    "types": "./dist/main.d.ts"
  },
  "bugs": {
    "url": "https://github.com/reliverse/pm/issues",
    "email": "blefnk@gmail.com"
  },
  "files": ["package.json", "README.md", "LICENSE.md", "dist"],
  "homepage": "https://github.com/reliverse/pm",
  "keywords": ["reliverse", "package manager", "package managers", "pm", "pmx"],
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "pathe": "^1.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.14.0",
    "@types/bun": "^1.1.13",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "knip": "^5.36.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.4"
  }
}
